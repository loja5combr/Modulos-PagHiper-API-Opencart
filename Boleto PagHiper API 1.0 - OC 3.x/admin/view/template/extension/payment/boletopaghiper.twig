{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-salvar" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
	{% if (salvo_com_sucesso) %} 
    <div class="alert alert-success"><i class="fa fa-check"></i> Dados do m&oacute;dulo salvos com sucesso!
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-salvar" class="form-horizontal">
			<div class="form-group required">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="Titulo a exibir ao Cliente">Titulo do M&oacute;dulo</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_titulo" value="{{ payment_boletopaghiper_titulo }}" placeholder="Titulo a exibir ao Cliente" id="input-payable" class="form-control" />
              {% if (error_titulo) %} 
              <div class="text-danger">{{ error_titulo }}</div>
              {% endif %} 
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-payable"><span data-toggle="tooltip" title="Obtenha em sua conta PagHiper no menu Credenciais">API Key</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_api_key" value="{{ payment_boletopaghiper_api_key }}" placeholder="API Key PagHiper" id="input-payable" class="form-control" />
              {% if (error_api_key) %} 
              <div class="text-danger">{{ error_api_key }}</div>
              {% endif %} 
            </div>
          </div>
		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-payable"><span data-toggle="tooltip" title="Obtenha em sua conta PagHiper no menu Credenciais">API Token</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_api_token" value="{{ payment_boletopaghiper_api_token }}" placeholder="API Token PagHiper" id="input-payable" class="form-control" />
              {% if (error_api_token) %} 
              <div class="text-danger">{{ error_api_token }}</div>
              {% endif %} 
            </div>
          </div>
		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-payable">Prazo de Validade (dias)</label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_validade" value="{{ payment_boletopaghiper_validade }}" placeholder="API Token PagHiper" id="input-payable" class="form-control" />
              {% if (error_validade) %} 
              <div class="text-danger">{{ error_validade }}</div>
              {% endif %} 
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_total" value="{{ payment_boletopaghiper_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Origem CPF</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_origem_cpf" id="input-order-status" class="form-control">
              <option value="0" selected="selected">Cliente digita manual</option>
				{% for campo in campos %} 
				{% if (campo['custom_field_id'] == payment_boletopaghiper_origem_cpf) %} 
				<option value="{{ campo['custom_field_id'] }}" selected="selected">{{ campo['name'] }}</option>
				{% else %} 
				<option value="{{ campo['custom_field_id'] }}">{{ campo['name'] }}</option>
				{% endif %} 
				{% endfor %} 
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Origem CNPJ</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_origem_cnpj" id="input-order-status" class="form-control">
              <option value="0" selected="selected">Cliente digita manual</option>
				{% for campo in campos %} 
				{% if (campo['custom_field_id'] == payment_boletopaghiper_origem_cnpj) %} 
				<option value="{{ campo['custom_field_id'] }}" selected="selected">{{ campo['name'] }}</option>
				{% else %} 
				<option value="{{ campo['custom_field_id'] }}">{{ campo['name'] }}</option>
				{% endif %} 
				{% endfor %} 
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Origem N&uacute;mero Logradouro</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_origem_numero" id="input-order-status" class="form-control">
              <option value="0" selected="selected">Vai junto ao logradouro</option>
				{% for campo in campos %} 
				{% if (campo['custom_field_id'] == payment_boletopaghiper_origem_numero) %} 
				<option value="{{ campo['custom_field_id'] }}" selected="selected">{{ campo['name'] }}</option>
				{% else %} 
				<option value="{{ campo['custom_field_id'] }}">{{ campo['name'] }}</option>
				{% endif %} 
				{% endfor %} 
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Origem Complemento</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_origem_complemento" id="input-order-status" class="form-control">
              <option value="0" selected="selected">N&atilde;o requer o uso</option>
				{% for campo in campos %} 
				{% if (campo['custom_field_id'] == payment_boletopaghiper_origem_complemento) %} 
				<option value="{{ campo['custom_field_id'] }}" selected="selected">{{ campo['name'] }}</option>
				{% else %} 
				<option value="{{ campo['custom_field_id'] }}">{{ campo['name'] }}</option>
				{% endif %} 
				{% endfor %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Status Aguardando Pagamento</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %} 
                {% if (order_status['order_status_id'] == payment_boletopaghiper_order_status_id) %} 
                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                {% else %} 
                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                {% endif %} 
                {% endfor %} 
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Status Pago</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_order_status_pago" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %} 
                {% if (order_status['order_status_id'] == payment_boletopaghiper_order_status_pago) %} 
                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                {% else %} 
                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                {% endif %} 
                {% endfor %} 
              </select>
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">Status Cancelado</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_order_status_cancelado" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %} 
                {% if (order_status['order_status_id'] == payment_boletopaghiper_order_status_cancelado) %} 
                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                {% else %} 
                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                {% endif %} 
                {% endfor %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %} 
                {% if (geo_zone['geo_zone_id'] == payment_boletopaghiper_geo_zone_id) %} 
                <option value="{{ geo_zone['geo_zone_id'] }}" selected="selected">{{ geo_zone['name'] }}</option>
                {% else %} 
                <option value="{{ geo_zone['geo_zone_id'] }}">{{ geo_zone['name'] }}</option>
                {% endif %} 
                {% endfor %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_boletopaghiper_status" id="input-status" class="form-control">
                {% if (payment_boletopaghiper_status) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_boletopaghiper_sort_order" value="{{ payment_boletopaghiper_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}